<tool id="input" name="Input" version="0.1.0">

    <stdio>
        <exit_code range="1:" />
    </stdio>
	
	<requirements>
		<container type="docker">clonehd:smchet</container>
	</requirements>
	
	<command>
	<![CDATA[
	/opt/cloneHD-tools/clonehd/clonehd.py 
	-v ${input_type}
	--output-cna ${cna}
	--output-variants ${snv}
	${vcf}
	]]>
	</command>

	<inputs>
		<param name="input_type" type="select" label="" help="" value="Variant input type"/>
			<option value="mutect_smchet" selected="True">MuTect</option>
			<option value="sanger">Sanger</option>
		</param>
		<param format="tabular" name="vcf" type="data" label="Use a fixed mean total copy number for SNV data" help=""/>
	</inputs>

	<outputs>
		<data format="tabular" name="cna" type="data" label="CNAs for cloneHD"/>
		<data format="tabular" name="snv" type="data" label="SNVs for cloneHD"/>
	</outputs>
	
	<help>
	   Prepare CNA, BAF and SNV input data.
	</help>

</tool>