<tool id="cloneHD_model_selection" name="cloneHD - Tool Model Selection" version="0.1.0">
  <stdio>
    <exit_code range="1:" />
  </stdio>
  <requirements>
    <container type="docker">clonehd:smchet</container>
  </requirements>
  <command>
    <![CDATA[
    perl /opt/cloneHD-tools/clonehd/subclone_model_selection.pl 
    -i ${Nc1_summary} -j ${Nc1_snv} 
    -k ${Nc2_summary} -l ${Nc2_snv}
    -m ${Nc3_summary} -n ${Nc3_snv} 
    -o sample;
    ]]>
  </command>
  <inputs>
        <param name="Nc1_summary" type="data" optional="false" help="Nc=1 model (summary)" label="Model summary"/>
	<param name="Nc1_snv" type="data" optional="false" help="Nc=1 model (SNV posterior)" label="SNV posterior"/>
        <param name="Nc2_summary" type="data" optional="false" help="Nc=2 model (summary)" label="Model summary"/>
	<param name="Nc2_snv" type="data" optional="false" help="Nc=2 model (SNV posterior" label="SNV posterior"/>
        <param name="Nc3_summary" type="data" optional="false" help="Nc=3 model (summary)" label="Model summary"/>
	<param name="Nc3_snv" type="data" optional="false" help="Nc=3 model (SNV posterior)" label="SNV posterior"/>
  </inputs>
  <outputs>
        <data format="txt" name="assignment_probability" label="Assignment probability table" from_work_dir="sample.assignment_probability_table.txt"/>
  </outputs>
  <help>
	  Create SMC-Het output from cloneHD/filterHD results.
  </help>
</tool>
